<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.toggle.local"
    name="Toggle Local" version="0.0.3" provider-name="robweber">
  <requires>
    <import addon="xbmc.python" version="2.14.0"/>
  </requires>
  <extension point="xbmc.python.script" library="default.py"> 
     <provides>executable</provides> 
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Toggle between remote and local xbmc states</summary>
    <description lang="en">Renames local and remote advancedsettings files to toggle between using mysql or local databases</description>
    <platform>all</platform>
    <language></language>
  </extension>
</addon>
